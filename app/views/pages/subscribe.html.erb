<% content_for :title do %>
  Subscribe to Profiler Magazine Today
<% end %>

<% content_for :banner do %>
  <div class="issue_banner subscription_banner">
    <h2 class="subscription_header">Get the Ultimate Fraud Fighting Resource...Free!</h2>
    <div class="content_left">
      <%= image_tag("subscribe_banner.png", :alt => "Profiler Magazine") %>
      <%= link_to image_tag("subscription_app.png", :alt => "Profiler Magazine App", :class => "app"), "http://phobos.apple.com/WebObjects/MZStore.woa/wa/viewSoftware?id=402192354&mt=8?partnerId=30&siteID=KEmRFwU0WKY-hI28KvRKOGwR8BIz5W8B3A", :target => "_blank" %>
      <h5 class="quote">"The articles were <span>excellent, concise, informative, interesting,</span> and easy to read"</h5>
      <p>- Dr, Ray Janevicius</p>
    </div>


      <div class="banner_content">
        <ul id="bullets">
          <li>
            <span class="bullet"></span>
            Private &#38; Public Sector Fraud Trips
          </li>
          <li>
            <span class="bullet"></span>
            Two Info-packed Issues Per Year
          </li>
          <li>
            <span class="bullet"></span>
            New &#38; Emerging Fraud Schemes
          </li>
        </ul>
        <h3 class="subscription_form">Enjoy Your Subscription</h3>
        <%= form_tag("http://success.veriskhealth.com/acton/eform/2131/004f/d-ext-0001", :method => "post", :id => "pf") do %>
      
          <div class="visible_field">
            <%= label :profiler, :business_name, "Company *" %><br />
            <%= text_field :profiler, :business_name, :name => "Company", :class => "validate(required)" %>
          </div>
          <div class="visible_field">
            <%= label :profiler, :profiler_title, "Job Title *" %><br />
            <%= text_field :profiler, :job_title, :name => "Job Title", :class => "validate(required)" %>
          </div>
          <div class="visible_field">
            <%= label :profiler, :profiler_email, "Email Address *" %><br />
            <%= text_field :profiler, :profiler_email, :name => "E-mail Address", :class => "validate(required, email)" %>
          </div>
          <div class="visible_field">
            <%= label :profiler, :profiler_first_name, "First Name *" %><br />
            <%= text_field :profiler, :profiler_first_name, :name => "First Name", :class => "validate(required)" %>
          </div>
          <div class="visible_field">
            <%= label :profiler, :profiler_last_name, "Last Name *" %><br />
            <%= text_field :profiler, :profiler_last_name, :name => "Last Name", :class => "validate(required)" %>
          </div>
          <div class="visible_field">
            <%= label :profiler, :address, "Address *" %><br />
            <%= text_field :profiler, :address, :name => "Business Street", :class => "validate(required)" %>
          </div>
          <div class="visible_field">
            <%= label :profiler, :city, "City *" %><br />
            <%= text_field :profiler, :city, :name => "Business City", :class => "validate(required)" %>
          </div>
          <div class="visible_field">
            <%= label :profiler, :state, "State *" %><br />
            <%= text_field :profiler, :state, :name => "Business State" , :class => "validate(required)"%>
          </div>
          <div class="visible_field">
            <%= label :profiler, :zipcode, "Zipcode *" %><br />
            <%= text_field :profiler, :zipcode, :name => "Business Postal Code", :class => "validate(required)" %>
          </div>
          <%= submit_tag 'Subscribe', :class => "btn_small submit_btn", :title => "Submit Your Message to Verisk Health" %>
        <% end %>
        <p class="form">* All fields are required.<br />Privacy Policy: We will not sell or share your information to any outside organizations.</p>
      </div>

    
    <% end %>
  </div>
  

