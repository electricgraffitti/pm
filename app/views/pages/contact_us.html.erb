<% content_for :title do %>
  Contact Us for more information on Profiler Magazine
<% end %>

<% content_for :banner do %>
  <div class="issue_banner">
    <%= image_tag("issue_covers.png", :alt => "Profiler Magazine") %>
    <div class="banner_content">
      <h2 class="form_header">We want to hear from you.</h2>
      <%= form_tag("http://www2.hcinsight.com/l/1492/2011-01-11/JLL7N", :method => "post", :id => "profiler_form") do %>
        <div class="visible_field">
          <%= label :profiler, :profiler_first_name, "First Name *" %><br />
          <%= text_field :profiler, :profiler_first_name, :name => "profiler_first_name" %>
        </div>
        <div class="visible_field">
          <%= label :profiler, :profiler_last_name, "Last Name *" %><br />
          <%= text_field :profiler, :profiler_last_name, :name => "profiler_last_name" %>
        </div>
        <div class="visible_field">
          <%= label :profiler, :profiler_email, "Email Address *" %><br />
          <%= text_field :profiler, :profiler_email, :name => "profiler_email" %>
        </div>
        <div class="visible_field">
          <%= label :profiler, :business_name, "Company *" %><br />
          <%= text_field :profiler, :business_name, :name => "profiler_business_name" %>
        </div>
        <div class="visible_field">
          <%= label :profiler, :comment, "Comments" %><br />
          <%= text_area :profiler, :comment, :name => "profiler_us_comment", :rows => 3, :cols => 28   %>
        </div>
        <div class="clearfix"></div>
        <%= submit_tag 'Submit', :class => "btn_small", :title => "Submit Your Message to HealthCare Insight" %>
      <% end %>
    </div>
  </div>
<% end %>

