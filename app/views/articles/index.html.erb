<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Featured</th>
    <th>Banner</th>
    <th>Color box</th>
    <th>Article url</th>
    <th>Issue</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.featured %></td>
    <td><%= article.banner %></td>
    <td><%= article.color_box_id %></td>
    <td><%= article.article_url %></td>
    <td><%= article.issue_id %></td>
    <td><%= link_to 'Show', article %></td>
    <td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Destroy', article, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

