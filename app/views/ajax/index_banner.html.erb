<div class="issue_banner">
  <%= image_tag(@issue.issue_cover.url(:banner)) %>
  <div class="banner_content">
    <div id="banner_article">
      <% @issue.banner_articles.each do |ba| %>
        <%= render :partial => 'pages/index_banner_article', :locals => {:ba => ba} %>
      <% end %>
    </div>
    <div id="featured_articles">
      <% @issue.featured_articles.each do |fa| %>
        <%= render :partial => 'pages/index_featured_article', :locals => {:fa => fa} %>
      <% end %>
    </div>
  </div>
  <div id="app_link">
    <%= image_tag("profiler_banner_icon.png") %>
    <%= link_to "Get the App", "http://phobos.apple.com/WebObjects/MZStore.woa/wa/viewSoftware?id=402192354&mt=8?partnerId=30&siteID=KEmRFwU0WKY-hI28KvRKOGwR8BIz5W8B3A", :target => "_blank" %>
  </div>
</div>